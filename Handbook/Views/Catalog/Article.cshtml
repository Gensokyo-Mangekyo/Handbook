@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@using Handbook.Models;
@model Article
@inject ApplicationContext db;

<style>
    .Content {
        text-align: center;
    }
    .Content h1 {
        color: white;  font-size: 40px;
    }
     .Content h2 {
        color: white;  font-size: 20px;
    }

    .Content p {
        color: white; font-size: 14px;
    }
</style>
<div style="display: flex; flex-basis: 500px;">

    @await Html.PartialAsync("Catalog",db.Catalogs.SelectMany(x => x.chapters).Where(x => x.ChapterId == Model.ChapterId)?.ToList())
        
<div style="flex-grow:2;">
    <div class="Content">
   <h1>@db.Catalogs.SelectMany(x => x.chapters).Where(x => x.ChapterId == Model.ChapterId)?.ToList().First().Name</h1>
   <h2 >@Model.Title</h2>
         @Html.Raw(Model.Content)
  
     </div>
</div>

</div>



